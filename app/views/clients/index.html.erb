
<div class='col-1'>
  <%if flash[:message]%>
    <div class = 'error'>
    <p><%=flash[:message]%></p>
    </div>
  <%end%>
  
  <h1>Client List</h1>

  <% @clients.each do |client| %>
    <br>
    <p><%= link_to client.fullname, client_path(client) %></p>
    <p><%= client.phones %></p>
    <p><%= client.email %></p>
  <% end %>
</div>

<div class='col-2'>
  <p><%=link_to "Add New Client", new_client_path %></p>
</div>
